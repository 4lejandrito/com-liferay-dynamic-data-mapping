{namespace DDMCaptcha}

/**
 * Defines the delegated template for the captcha field.
 */
{deltemplate ddm.field variant="'captcha'"}
	{call .render data="all" /}
{/deltemplate}

/**
 * Prints the DDM form captcha field.
 *
 * @param html
 * @param name
 * @param visible
 */
{template .render}
	<div class="form-group{$visible ? '' : ' hide'} liferay-ddm-form-field-captcha" data-fieldname="{$name}">
		{$html}
	</div>
{/template}